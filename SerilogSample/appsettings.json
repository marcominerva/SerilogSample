{
    "ConnectionStrings": {
        "SqlConnection": "",
        "LogsConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=MinimalDB;Integrated Security=true"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Expressions" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "Microsoft.AspNetCore.Identity": "Error",
                "Microsoft.EntityFrameworkCore": "Error",
                "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Debug"
            },
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "%BASE_DIRECTORY%\\Logs\\Log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 30,
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            {
                "Name": "MSSqlServer",
                "Args": {
                    "connectionString": "LogsConnection",
                    "sinkOptionsSection": {
                        "tableName": "Logs",
                        "autoCreateSqlTable": true
                    },
                    "restrictedToMinimumLevel": "Information",
                    "columnOptionsSection": {
                        "addStandardColumns": [ "LogEvent", "TraceId", "SpanId" ],
                        "removeStandardColumns": [ "MessageTemplate", "Properties" ],
                        "additionalColumns": [
                            {
                                "ColumnName": "UserName",
                                "PropertyName": "UserName",
                                "DataType": "nvarchar",
                                "DataLength": 255,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "IsHttp",
                                "PropertyName": "IsHttp",
                                "DataType": "bit",
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "LevelNumber",
                                "PropertyName": "LevelNumber",
                                "DataType": "int",
                                "AllowNull": true
                            }
                        ],
                        "id": { "dataType": "bigint" },
                        "timeStamp": {
                            "columnName": "Timestamp",
                            "convertToUtc": true,
                            "nonClusteredIndex": true,
                            "nonClusteredIndexDirection": "Desc"
                        },
                        "logEvent": {
                            "excludeAdditionalProperties": false,
                            "excludeStandardColumns": false
                        }
                    }
                }
            }
        ],
        "Filter": [
            {
                "Name": "ByExcluding",
                "Args": {
                    "expression": "RequestMethod = 'OPTIONS' OR RequestPath LIKE '/openapi/%' ci OR RequestPath = '/favicon.ico' ci"
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    "AllowedHosts": "*"
}
